<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

    </data>

    <LinearLayout
        android:id="@+id/edit_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:weightSum="3"
        tools:context=".auth.Login.LoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.example.commanderestorant.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal|top"
                android:text="Commande"
                android:textColor="@color/primaryTxtColor"
                android:textSize="20sp" />

            <com.example.commanderestorant.customfonts.MyTextView
                android:id="@+id/textLets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtLogin"
                android:layout_marginBottom="10dp"
                android:text="@string/letsget"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <com.example.commanderestorant.customfonts.MyTextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:text="@string/login_to_your_account" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.example.commanderestorant.customfonts.MyTextView
                            android:id="@+id/txt_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="11sp" />


                        <com.example.commanderestorant.customfonts.MyEditText
                            android:id="@+id/edit_email"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/selector_edit_text"
                            android:gravity="start|center"
                            android:hint="Email"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:textColor="@color/black"
                            android:textSize="11sp" />


                        <TextView
                            android:id="@+id/txt_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Password"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:visibility="visible" />


                        <com.example.commanderestorant.customfonts.MyEditText
                            android:id="@+id/edit_passowrd"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_gravity="start"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/selector_edit_text"
                            android:gravity="start|center"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:textColor="@color/black"
                            android:textSize="11sp" />


                        <com.example.commanderestorant.customfonts.MyButton
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/shpe_btn_skip"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"

                            android:text="Login"
                            android:textColor="@color/white"
                            android:textSize="11sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_signUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"

                        android:layoutDirection="locale"
                        android:orientation="horizontal">

                        <com.example.commanderestorant.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't have an account?"
                            android:textColor="@color/loginSelver"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.example.commanderestorant.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Register"
                            android:textColor="@color/purple_200"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </LinearLayout>
</layout>